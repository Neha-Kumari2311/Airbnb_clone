<% layout('/layouts/boilerplate') -%>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 1rem;
    gap: 1rem;
    overflow: hidden;
  }

  .filter-scroll {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
    gap: 1rem;
    flex: 1;
  }

  .filter-scroll::-webkit-scrollbar {
    display: none;
  }

  .filter {
    flex: 0 0 auto;
    text-align: center;
    opacity: 0.7;
    min-width: 80px;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
    margin: 0.25rem 0 0 0;
  }

  .filter.active {
    opacity: 1;
    border-bottom: 2px solid black;
    font-weight: bold;
  }
  .tax-info {
    display: none;
  }

  .tax-toggle {
    flex-shrink: 0;
    padding: 0.5rem 1rem;
    border: 1px solid rgb(61, 58, 58);
    border-radius: 1rem;
    height: 3rem;
    display: flex;
    align-items: center;
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    #filters {
      flex-direction: column;
      align-items: flex-start;
    }

    .tax-toggle {
      margin-left: 0;
    }
  }
</style>

<div id="filters">
  <div class="filter-scroll">
    <div
      class="filter <%= currentCategory === 'trending' ? 'active' : '' %>"
      data-category="trending"
    >
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div
      class="filter <%= currentCategory === 'rooms' ? 'active' : '' %>"
      data-category="rooms"
    >
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div
      class="filter <%= currentCategory === 'iconic cities' ? 'active' : '' %>"
      data-category="iconic cities"
    >
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic cities</p>
    </div>
    <div
      class="filter <%= currentCategory === 'mountains' ? 'active' : '' %>"
      data-category="mountains"
    >
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div
      class="filter <%= currentCategory === 'castles' ? 'active' : '' %>"
      data-category="castles"
    >
      <div><i class="fa-solid fa-chess-rook"></i></div>
      <p>Castles</p>
    </div>
    <div
      class="filter <%= currentCategory === 'amazing pools' ? 'active' : '' %>"
      data-category="amazing pools"
    >
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing pools</p>
    </div>
    <div
      class="filter <%= currentCategory === 'camping' ? 'active' : '' %>"
      data-category="camping"
    >
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div
      class="filter <%= currentCategory === 'farms' ? 'active' : '' %>"
      data-category="farms"
    >
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div
      class="filter <%= currentCategory === 'arctic' ? 'active' : '' %>"
      data-category="arctic"
    >
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
    <div
      class="filter <%= currentCategory === 'domes' ? 'active' : '' %>"
      data-category="domes"
    >
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
    </div>
    <div
      class="filter <%= currentCategory === 'boats' ? 'active' : '' %>"
      data-category="boats"
    >
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Boats</p>
    </div>
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% if (listings.length === 0) { %>
  <div
    class="d-flex justify-content-center align-items-center w-100"
    style="min-height: calc(100vh - 200px)"
  >
    <div
      class="alert alert-danger text-center shadow-sm"
      role="alert"
      style="max-width: 500px; width: 100%"
    >
      <h4 class="alert-heading">No Listings Found!</h4>
      <p>We couldnâ€™t find anything matching your search.</p>
      <hr />
      <p class="mb-0">
        Try a different keyword or explore all
        <a href="/listings" class="alert-link">listings</a>.
      </p>
    </div>
  </div>
  <% } %> <% for(let listing of listings) { %>
  <a class="listing-link" href="/listings/<%= listing._id %>">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %><br /></b>
          &#x20B9;<%= listing.price.toLocaleString("en-IN") %> /night
          <i class="tax-info"> &nbsp;&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  document.querySelectorAll(".filter").forEach((filter) => {
    filter.addEventListener("click", () => {
      const category = filter.getAttribute("data-category");
      window.location.href = `/listings?category=${encodeURIComponent(
        category
      )}`;
    });
  });

  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      info.style.display = info.style.display !== "inline" ? "inline" : "none";
    }
  });
</script>
